# Social Media API Keys (Example, adjust as needed per platform)
# These are used by src/services/social-media.ts (currently mocked)
# For a real app, you'd need to secure these, potentially by using server-side functions.

# TikTok
# TIKTOK_API_KEY="YOUR_TIKTOK_API_KEY" # Not directly used by Firebase Auth, but for platform posting
# TIKTOK_APP_SECRET="YOUR_TIKTOK_APP_SECRET"

# Instagram (often uses OAuth, might involve access tokens stored per user or a system user)
# INSTAGRAM_ACCESS_TOKEN="YOUR_INSTAGRAM_ACCESS_TOKEN"

# Facebook (similar to Instagram, uses OAuth)
# FACEBOOK_ACCESS_TOKEN="YOUR_FACEBOOK_ACCESS_TOKEN"

# Twitter / X
# TWITTER_API_KEY="YOUR_TWITTER_API_KEY"
# TWITTER_API_SECRET_KEY="YOUR_TWITTER_API_SECRET_KEY"
# TWITTER_ACCESS_TOKEN="YOUR_TWITTER_ACCESS_TOKEN"
# TWITTER_ACCESS_TOKEN_SECRET="YOUR_TWITTER_ACCESS_TOKEN_SECRET"

# YouTube
# YOUTUBE_API_KEY="YOUR_YOUTUBE_API_KEY"
# YOUTUBE_CLIENT_ID="YOUR_YOUTUBE_CLIENT_ID" # For OAuth flows
